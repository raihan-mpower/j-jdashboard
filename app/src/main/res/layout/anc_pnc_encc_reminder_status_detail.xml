<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboardcategory_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="dashboard.opensrp.org.jandjdashboard.fragments.dashboardCategoryDetailFragment"
    android:background="@color/alttablerow">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:elevation="3dp"
        android:padding="20dp">

        <TextView
            android:text="Month: this Week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/iconcolorsused"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/filtertitle"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
        <android.support.v7.widget.CardView
            android:id="@+id/elco_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/greencardcolor"
            android:elevation="3dp"
            android:padding="10dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitEnd"
                android:layout_gravity="bottom"
                android:src="@drawable/numberlivebirth"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:text="1300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:id="@+id/scheduled_count"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="top|right"
                    android:padding="2dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="Scheduled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:id="@+id/scheduled_label"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom|end"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/new_registered_elco_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/pinkcardcolor"
            android:elevation="3dp"
            android:padding="10dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitEnd"
                android:layout_gravity="bottom"
                android:src="@drawable/newelcotranscard"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:text="400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:id="@+id/completed_count"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="top|right"
                    android:padding="2dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="Completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:id="@+id/completed_label"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom|end"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/elco_visited_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/purplecardcolor"
            android:elevation="3dp"
            android:padding="10dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitEnd"
                android:layout_gravity="bottom"
                android:src="@drawable/numberdeath"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="1300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:id="@+id/due_count"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="top|right"
                    android:padding="2dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="Due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:id="@+id/due_label"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom|end"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/contraceptive_acceptance_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/lightgreencardcolor"
            android:elevation="3dp"
            android:padding="10dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitEnd"
                android:layout_gravity="bottom"
                android:src="@drawable/deathcard"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:id="@+id/post_due_count"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="top|right"
                    android:padding="2dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="Post Due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:id="@+id/post_due_label"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom|end"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/referred_for_contraceptive_side_effects_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/lightbluecardcolor"
            android:elevation="3dp"
            android:padding="10dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitEnd"
                android:layout_gravity="bottom"
                android:src="@drawable/deathcardblue"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:id="@+id/expired_count"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="top|right"
                    android:padding="2dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="Expired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:id="@+id/expired_label"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom|end"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="400dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="3dp"
            android:layout_weight="1">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/risk_status" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="3dp"
            android:layout_weight="1">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_type" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:elevation="3dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/graph_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>